@model ClinicManagementProject.Models.Appointments

@{
    ViewData["Title"] = "DeleteAppointment";
}

<h2>Delete Appointment</h2>

<h4>Are you sure you want delete this appointment?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment_Id" />
            <div class="form-group">
                <label asp-for="PatientsPatient_Id" class="control-label"></label>
                <input asp-for="PatientsPatient_Id" class="form-control" />
                <span asp-validation-for="PatientsPatient_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization_Required" class="control-label"></label>
                <input asp-for="Specialization_Required" class="form-control" />
                <span asp-validation-for="Specialization_Required" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor" class="control-label"></label>
                <input asp-for="Doctor" class="form-control" />
                <span asp-validation-for="Doctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment_time" class="control-label"></label>
                <input asp-for="Appointment_time" class="form-control" />
                <span asp-validation-for="Appointment_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<span class="badge badge-success">@ViewBag.delapp</span>
<div>
    <a asp-controller="ClinicHome" asp-action="Index">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
