@model ClinicManagementProject.Models.Appointments

@{
    ViewData["Title"] = "AddPointment";
}

<h2>Add Appointment</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientsPatient_Id" class="control-label"></label>
                <input asp-for="PatientsPatient_Id" class="form-control" />
                <span asp-validation-for="PatientsPatient_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization_Required" class="control-label"></label>
                @Html.DropDownList("Specialization_Required", new List<SelectListItem>
               {
                   new SelectListItem{Value="General",Text="General"},
                   new SelectListItem{Value="Internal Medicine",Text="Internal Medicine"},
                   new SelectListItem{Value="Pediatrics",Text="Pediatrics"},
                   new SelectListItem{Value="Orthopedics",Text="Orthopedics"},
                   new SelectListItem{Value="Ophthalmology",Text="Ophthalmology"}

                }, "Specialization_Required", new { @class = "form-control" })
                <span asp-validation-for="Specialization_Required" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor" class="control-label"></label>
                @Html.DropDownList("Doctor", new SelectList(@ViewBag.items,"Doctor"),"Doctor", new { @class = "form-control" })
                    <span asp-validation-for="Doctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment_time" class="control-label"></label>
                <input asp-for="Appointment_time" class="form-control" />
                <span asp-validation-for="Appointment_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm Appointment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ClinicHome" asp-action="Index">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
